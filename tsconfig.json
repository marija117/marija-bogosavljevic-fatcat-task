{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "react-jsx",
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@homework-task/*": ["src/*"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,

        "skipLibCheck": true
    },
    "include": ["src"]
}
